{
  "name": "code-mode-toon",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/code-mode-toon-server.js",
  "bin": {
    "code-mode-toon": "./dist/code-mode-toon-server.js"
  },
  "scripts": {
    "build": "tsc && npm run build:workflows",
    "build:workflows": "tsc .workflows/*.ts --outDir dist/.workflows --target ES2022 --module NodeNext --moduleResolution NodeNext --esModuleInterop --skipLibCheck && cp dist/.workflows/.workflows/* dist/.workflows/ && rm -rf dist/.workflows/.workflows dist/.workflows/src",
    "lint": "tsc --noEmit",
    "start": "node dist/code-mode-toon-server.js",
    "dev": "tsc --watch",
    "test": "npm run build && node dist/tests/toon-encoder.test.js",
    "benchmark": "npm run build && node dist/tests/benchmark.js"
  },
  "dependencies": {
    "@byjohann/toon": "^0.6.0",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@types/eventsource": "^1.1.15",
    "eventsource": "^4.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  }
}